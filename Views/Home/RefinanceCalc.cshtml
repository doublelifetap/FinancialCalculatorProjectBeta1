                    <input asp-for="Value3" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RefinanceResult">Refinance Result:</label>
                    <output asp-for="RefinanceResult" class="form-control" id="RefinanceRefult">@ViewBag.RefinanceResultOne</output>
