                            <option value="">Choose an option</option>
                            <option value="true">Add all values</option>
                            <option value="false">Substract from first value</option>
                         </select>
                </div> -->
                <button type="submit" class="btn btn-primary" id="refinance" value="refinance" name="calculate">Calculate Refinancing</button>
                <button type="submit" class="btn btn-primary" id="refinance" value="refinanceSub" name="calculate">Calculate Refinancing Substracted</button>
                <output asp-for="RefinanceResult" class="form-control" id="RefinanceRefult">@ViewBag.RefinanceResultOne</output>
                <h2>@ViewBag.RefinanceResultOne</h2>
            </form>
        </div>
    </center>
</body>
</html>
