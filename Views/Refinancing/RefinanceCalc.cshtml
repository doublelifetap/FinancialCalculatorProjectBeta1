    <!--<br>-->
    <!--<br>-->
    <!--Leasing Calculator Fields-->
    <div class="main-container">
        <label for="section-title" class="section-title">Настоящ кредит</label>
        <!--below <form> only concernes View <-> Controller relationship-->
        <form asp-controller="Refinancing" asp-action="RefinanceCalc" method="post" class="m-2">
            <div class="float-container">
                <div class="float-child-left">
                    <div class="input-wrapper">
                        <input type="number" asp-for="CreditAmount" asp-controller="Refinancing" asp-action="RefinanceCalc" name="CreditAmount" placeholder="Размер на кредита*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="float-child-right">
                    <div class="input-wrapper">
                        <input type="number" asp-for="InterestRatePercent" asp-controller="Refinancing" asp-action="RefinanceCalc" name="InterestRatePercent" placeholder="Лихва (%)*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="float-child-left">
                    <div class="input-wrapper">
                        <input type="number" asp-for="CreditTermMonths" asp-controller="Refinancing" asp-action="RefinanceCalc" name="CreditTermMonths" placeholder="Срок на кредита (месеци)*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="float-child-right">
                    <div class="input-wrapper">
                        <input type="number" asp-for="NumberOfPaymentsMade" asp-controller="Refinancing" asp-action="RefinanceCalc" name="NumberOfPaymentsMade" placeholder="Брой на направените вноски*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="dropdown-child">
                    <div class="input-wrapper">
                        <input type="number" asp-for="EarlyRepaymentTax" asp-controller="Refinancing" asp-action="RefinanceCalc" name="EarlyRepaymentTax" placeholder="Такса за предсрочно погасяване*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>
            </div>

            <label for="section-title" class="section-title">Нов кредит</label>

            <div class="float-container">

                <div class="float-child-left">
                    <div class="input-wrapper">
                        <input type="number" asp-for="NewCreditInterest" asp-controller="Refinancing" asp-action="RefinanceCalc" name="NewCreditInterest" placeholder="Лихва*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="float-child-right">
                    <div class="input-wrapper">
                        <input type="number" asp-for="NewCreditInitialTaxesPecent" asp-controller="Refinancing" asp-action="RefinanceCalc" name="NewCreditInitialTaxesPecent" placeholder="Първоначални такси(%)*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>

                <div class="float-child-left">
                    <div class="input-wrapper">
                        <input type="number" asp-for="NewCreditInitialTaxesFlat" asp-controller="Refinancing" asp-action="RefinanceCalc" name="NewCreditInitialTaxesFlat" placeholder="Първоначални такси(валута)*" required id="size" min="100" max="100000000"><br>
                    </div>
                </div>


                <button onclick="myFunction()" asp-controller="Refinancing" asp-action="RefinanceCalc" formmethod="post" type="submit" class="calculate-button" id="Refinancing" value="Refinancing" name="Refinancing">Calculate Lease</button>
                <!--redundant-->
                <div onclick="myFunction()" class="button-container" formmethod="post" type="submit" id="lease" value="lease" name="calculate">
                    <button class="calculate-button">Изчисли</button>
                </div>

        </form>
    </div>

    <div onclick="myFunction()" class="button-container">
        <button class="calculate-button">Изчисли</button>
    </div>
    <div onclick="myFunction()" class="button-container">
        <table>
            <tr>
                <td>Резултат</td>
                <td>Текущ кредит</td>
                <td>Нов кредит</td>
                <td>+/- Спестявания</td>
            </tr>
            <tr>
                <td>Лихва</td>
                <td>@ViewBag.interestRate</td>
                <td>@ViewBag.interestRateNew</td>
                <td></td>
            </tr>
            <tr>
                <td>Срокове на кредитите</td>
                <td>@ViewBag.creditTermOld</td>
                <td>@ViewBag.creditTermNew</td>
                <td></td>
            </tr>
            <tr>
                <td>Такса за предсрочно погасяване</td>
                <td>@ViewBag.earlyRepaymentTax</td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>Месечна вноска</td>
                <td>@ViewBag.monthlyPaymentOld</td>
                <td>@ViewBag.monthlyPaymentNew</td>
                <td>@ViewBag.savingsOnMonthly</td>
            </tr>
            <tr>
                <td>Общо изплатени</td>
                <td>@ViewBag.totalPaidOld</td>
                <td>@ViewBag.totalPaidNew</td>
                <td>@ViewBag.savingsOnTotal</td>
            </tr>
            </table>
        </div>
    <br>

